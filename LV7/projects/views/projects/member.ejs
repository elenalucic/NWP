<% include ../partials/header %>

<h1 class="mb-4">Moji projekti (član tima)</h1>

<div class="row row-cols-1 row-cols-md-2 g-4">
  <% projects.forEach(project => { %>
    <div class="col">
      <div class="card h-100 shadow-sm">
        <div class="card-body">
          <h5 class="card-title"><%= project.naziv %></h5>
          <p class="card-text"><%= project.opis %></p>
          <p class="text-muted">Cijena: <%= project.cijena %> €</p>
          <p class="text-muted">
            Početak: <%= project.datumPocetka ? project.datumPocetka.toISOString().split('T')[0] : 'N/A' %>
          </p>
          <p class="text-muted">
            Završetak: <%= project.datumZavrsetka ? project.datumZavrsetka.toISOString().split('T')[0] : 'N/A' %>
          </p>
          <p class="text-muted">Arhiviran: <%= project.arhiviran ? 'Da' : 'Ne' %></p>
          <% if (project.tasks && project.tasks.length > 0) { %>
            <p class="text-muted">Obavljeni poslovi:</p>
            <ul>
              <% project.tasks.filter(task => task.completed).forEach(task => { %>
                <li><%= task.description %></li>
              <% }) %>
            </ul>
          <% } %>

          <a href="/projects/<%= project._id %>" class="btn btn-primary btn-sm">Detalji</a>
        </div>
      </div>
    </div>
  <% }) %>
</div>

<% include ../partials/footer %>